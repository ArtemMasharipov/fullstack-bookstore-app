# ========================
# Server Configuration
# ========================
PORT=3000
NODE_ENV=development
SESSION_SECRET=yourSecretKeyHere

# ========================
# Database Configuration
# ========================
# Option 1: Use full MongoDB URI (recommended for cloud databases like MongoDB Atlas)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# Option 2: Or use separate URL and DATABASE_NAME (for local MongoDB)
# MONGODB_URL=mongodb://localhost:27017
# DATABASE_NAME=bookStoreDB

# ========================
# JWT Configuration
# ========================
JWT_SECRET=your_super_secure_secret_key_change_this_in_production
JWT_EXPIRATION=7d
JWT_AUDIENCE=your-audience
JWT_ISSUER=your-issuer

# ========================
# CORS Configuration
# ========================
CORS_ORIGIN=http://localhost:8080
CORS_METHODS=GET,POST,PUT,PATCH,DELETE
CORS_CREDENTIALS=true

# ========================
# Admin Defaults
# ========================
DEFAULT_ADMIN_EMAIL=admin@admin.com
DEFAULT_ADMIN_PASSWORD=admin_password
DEFAULT_ADMIN_USERNAME=admin

# ========================
# Cloudinary Configuration (Optional)
# ========================
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
